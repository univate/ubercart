      'type' => MENU_NORMAL_ITEM,
    );
  }
  else{
    $items[] = array('path' => 'admin/store/orders/'. arg(3) .'/shipments/ups',
      'access' => user_access('fulfill orders'),
      'title' => t('UPS Shipment'),
